<%= render 'shared/content_title', title: 'New Category' %>

<% if @category.errors.any? %>
  <div class='row'>
    <div class='alert-error span12'>
      <h5>Please fix these errors:</h5>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class='well'>
  <%= form_for @category do |f| %>
    <div class='control-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit 'Create Category', class: 'btn' %>
  <% end %>
</div>

