<div class = 'row'>

<div class = 'well span0 text-center'>
  <% if logged_in? %>
    <p>
      <%= link_to vote_post_path(post, vote: true),
        method: 'post', remote: true do %>
          <i class = 'icon-arrow-up'></i>
      <% end %>
    </p>
  <% end %>

  <p>
    <span id="post_<%= post.id %>_votes">
      <%= pluralize(post.total_votes, 'vote') %>
    </span>
  </p>

  <% if logged_in? %>
    <p>
      <%= link_to vote_post_path(post, vote: false),
        method: 'post', remote: true do %>
          <i class = 'icon-arrow-down'></i>
      <% end %>
    </p>
  <% end %>
</div>

<div class = 'span8 well'>
  <%= render post.categories %>

  <h4><%= link_to post.title, fix_url(post.url) %></h4>

  <p><%= post.description %></p>

  <p>
    <span class='quiet'>posted by</span> 

    <%= link_to post.creator.username, user_path(post.creator) %>

    <br />

    <small><span class='quiet'>on </span><%= post.created_at %></small>
  </p>

  <p>
    <small>
      <%= link_to("#{pluralize(post.comments.size, 'comment')}",
                  post_path(post)) %>
    </small>
  </p>
</div>
</div>
